unit uVendas;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, uPai, Vcl.StdCtrls, Vcl.ExtCtrls,
  Data.DB, Vcl.Grids, Vcl.DBGrids, Vcl.Mask, Vcl.DBCtrls;

type
  TfrmVendas = class(TfrmPai)
    DBLookupComboBox1: TDBLookupComboBox;
    DBEdit1: TDBEdit;
    DBEdit2: TDBEdit;
    Cliente: TLabel;
    Data: TLabel;
    Total: TLabel;
    dbgItens: TDBGrid;
    Button1: TButton;
    DBLookupComboBox2: TDBLookupComboBox;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    procedure Novo; override;
    procedure Salvar; override;
    //procedure Excluir; override;
  end;

var
  frmVendas: TfrmVendas;

implementation

{$R *.dfm}

uses uDataModule;












procedure TfrmVendas.Novo;
begin
  dmConexao.qryVendas.Append;
  dmConexao.qryVendas.FieldByName('data_venda').AsDateTime := Date;
end;

procedure TfrmVendas.Salvar;
begin
  if dmConexao.qryVendas.State in [dsInsert, dsEdit] then
    dmConexao.qryVendas.Post;
end;


end.
